    <main class="container">
        <!-- Home Page / Dashboard -->
        <section id="home-page" class="page active">
            <h1>Dashboard</h1>
            <div class="card score-display">
                <h2>Your Current Score</h2>
                <p class="score" id="user-score">12</p>
            </div>
            <div class="card">
                <h2>Pick History (Pre-Season)</h2>
                <table class="pick-history-table">
                    <thead>
                        <tr>
                            <th>Game</th>
                            <th>Your Pick</th>
                            <th>Result</th>
                            <th>Points</th>
                        </tr>
                    </thead>
                    <tbody id="pick-history-body">
                        <!-- Pick history will be populated by JavaScript -->
                    </tbody>
                </table>
            </div>
        </section>

        <!-- Weekly Picks Page -->
        <section id="picks-page" class="page">
            <h1 id="picks-page-title">Weekly Picks</h1>
            <div id="games-container">
                <!-- Game cards will be populated by JavaScript -->
            </div>
            <button class="save-picks-btn">Save Picks</button>
        </section>
    </main>

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // --- CONFIGURATION ---
            const CURRENT_WEEK = 'Week 1'; // Change this to the current week you want to display

            // --- RAW DATA (Paste from your Google Sheet here) ---
            const rawGameData = `
Week	Date	Time	Away Team	Away	Home Team	Home	Away Score	Home Score	Qtr	Clock	Situation	Pos	Status	Score	Total Points	Game Id	O/U	Odds	Favored Team	Spread	Fav Covered	Box Score Home	Box Score Away	Home Display Name	Away Display Name	Game Winner	Game Loser	Over	Under	Away Logo	Home Logo
Pre Week 1	Thu 08/07/2025	7:00 PM	Colts	IND	Ravens	BAL	16	24	F	0:00	game over		post	IND 16 BAL 24 (F)	40	401773001						14,7,0,3	6,3,7,0	Baltimore Ravens	Indianapolis Colts	Ravens	Colts	1	0	https://a.espncdn.com/i/teamlogos/nfl/500/scoreboard/ind.png	https://a.espncdn.com/i/teamlogos/nfl/500/scoreboard/bal.png
Week 1	Thu 09/04/2025	8:20 PM	Cowboys	DAL	Eagles	PHI	0	0	pre	0:00	waiting...		pre	DAL 0 PHI 0 (pre)	0	401772510	46.5	PHI -7	PHI	-7				Philadelphia Eagles	Dallas Cowboys			0	0	https://a.espncdn.com/i/teamlogos/nfl/500/scoreboard/dal.png	https://a.espncdn.com/i/teamlogos/nfl/500/scoreboard/phi.png
Week 1	Fri 09/05/2025	8:00 PM	Chiefs	KC	Chargers	LAC	0	0	pre	0:00	waiting...		pre	KC 0 LAC 0 (pre)	0	401772714	45.5	KC -3.5	KC	-3.5				Los Angeles Chargers	Kansas City Chiefs			0	0	https://a.espncdn.com/i/teamlogos/nfl/500/scoreboard/kc.png	https://a.espncdn.com/i/teamlogos/nfl/500/scoreboard/lac.png
Week 1	Sun 09/07/2025	1:00 PM	Buccaneers	TB	Falcons	ATL	0	0	pre	0:00	waiting...		pre	TB 0 ATL 0 (pre)	0	401772830	48.5	TB -2	TB	-2				Atlanta Falcons	Tampa Bay Buccaneers			0	0	https://a.espncdn.com/i/teamlogos/nfl/500/scoreboard/tb.png	https://a.espncdn.com/i/teamlogos/nfl/500/scoreboard/atl.png
Week 1	Sun 09/07/2025	1:00 PM	Bengals	CIN	Browns	CLE	0	0	pre	0:00	waiting...		pre	CIN 0 CLE 0 (pre)	0	401772829	46.5	CIN -5.5	CIN	-5.5				Cleveland Browns	Cincinnati Bengals			0	0	https://a.espncdn.com/i/teamlogos/nfl/500/scoreboard/cin.png	https://a.espncdn.com/i/teamlogos/nfl/500/scoreboard/cle.png
Week 2	Thu 09/11/2025	8:15 PM	Commanders	WSH	Packers	GB	0	0	pre	0:00	waiting...		pre	WSH 0 GB 0 (pre)	0	401772936	48.5	GB -1.5	GB	-1.5				Green Bay Packers	Washington Commanders			0	0	https://a.espncdn.com/i/teamlogos/nfl/500/scoreboard/wsh.png	https://a.espncdn.com/i/teamlogos/nfl/500/scoreboard/gb.png
`;

            const mockPickHistory = [
                { game: 'IND @ BAL', pick: 'BAL', result: 'Correct', points: '+2 (2x)' },
                { game: 'CIN @ PHI', pick: 'CIN', result: 'Incorrect', points: '-2' },
                { game: 'LV @ SEA', pick: 'LV', result: 'Correct', points: '+1' },
            ];

            // --- DATA PARSING FUNCTION ---
            function parseGameData(rawData) {
                const lines = rawData.trim().split('\n');
                const headers = lines[0].split('\t');
                return lines.slice(1).map(line => {
                    const values = line.split('\t');
                    const game = {};
                    headers.forEach((header, index) => {
                        game[header] = values[index];
                    });
                    return game;
                });
            }

            const allGames = parseGameData(rawGameData);
            const weeklyGames = allGames.filter(game => game.Week === CURRENT_WEEK);

            // --- Page Navigation ---
            const navLinks = document.querySelectorAll('.nav-link');
            const pages = document.querySelectorAll('.page');

            function showPage(pageId) {
                pages.forEach(page => page.classList.remove('active'));
                document.getElementById(pageId)?.classList.add('active');
                
                navLinks.forEach(link => {
                    link.classList.remove('active');
                    if (link.getAttribute('href') === `#${pageId.replace('-page', '')}`) {
                        link.classList.add('active');
                    }
                });
            }

            navLinks.forEach(link => {
                link.addEventListener('click', (e) => {
                    e.preventDefault();
                    const pageId = e.target.getAttribute('href').substring(1) + '-page';
                    showPage(pageId);
                });
            });

            // --- Home Page Logic ---
            function populatePickHistory() {
                const historyBody = document.getElementById('pick-history-body');
                historyBody.innerHTML = '';
                mockPickHistory.forEach(pick => {
                    const row = document.createElement('tr');
                    const resultClass = pick.result.toLowerCase();
                    row.innerHTML = `
                        <td>${pick.game}</td>
                        <td>${pick.pick}</td>
                        <td class="${resultClass}">${pick.result}</td>
                        <td class="${resultClass}">${pick.points}</td>
                    `;
                    historyBody.appendChild(row);
                });
            }

            // --- Picks Page Logic ---
            const gamesContainer = document.getElementById('games-container');
            let userPicks = {}; // { gameID: 'teamName' }
            let doubleUpPick = null; // gameID

            function isGameLocked(game) {
                // Lock the game if the status is not 'pre' (e.g., 'in', 'post', 'F')
                return game.Status !== 'pre';
            }

            function renderGames() {
                document.getElementById('picks-page-title').textContent = `${CURRENT_WEEK} Picks`;
                gamesContainer.innerHTML = '';
                weeklyGames.forEach(game => {
                    const gameCard = document.createElement('div');
                    gameCard.className = 'game-card';
                    gameCard.dataset.gameId = game['Game Id'];

                    const locked = isGameLocked(game);
                    if (locked) {
                        gameCard.classList.add('locked');
                    }

                    gameCard.innerHTML = `
                        <div class="team" data-team-name="${game['Away Display Name']}">
                            <img src="${game['Away Logo']}" alt="${game['Away Display Name']}">
                            <span class="team-name">${game['Away Display Name']}</span>
                        </div>
                        <div class="game-separator">@</div>
                        <div class="team" data-team-name="${game['Home Display Name']}">
                            <img src="${game['Home Logo']}" alt="${game['Home Display Name']}">
                            <span class="team-name">${game['Home Display Name']}</span>
                        </div>
                        <div class="game-info">
                            ${new Date(game.Date + ' ' + game.Time).toLocaleString('en-US', { weekday: 'short', month: 'short', day: 'numeric', hour: 'numeric', minute: '2-digit' })}
                        </div>
                        <div class="double-up-container">
                            <button class="double-up-btn">Double Up</button>
                        </div>
                    `;
                    gamesContainer.appendChild(gameCard);
                });

                addGameCardEventListeners();
            }

            function addGameCardEventListeners() {
                document.querySelectorAll('.game-card').forEach(card => {
                    const gameId = card.dataset.gameId;

                    // Team selection logic
                    card.querySelectorAll('.team').forEach(team => {
                        team.addEventListener('click', () => {
                            // Remove 'selected' from sibling team
                            const otherTeam = team.nextElementSibling?.matches('.team') ? team.nextElementSibling : team.previousElementSibling;
                            otherTeam.classList.remove('selected');
                            // Toggle 'selected' on clicked team
                            team.classList.toggle('selected');
                            
                            if (team.classList.contains('selected')) {
                                userPicks[gameId] = team.dataset.teamName;
                            } else {
                                delete userPicks[gameId];
                            }
                            console.log('Current Picks:', userPicks);
                        });
                    });

                    // Double up logic
                    const doubleUpBtn = card.querySelector('.double-up-btn');
                    doubleUpBtn.addEventListener('click', () => {
                        // If this button is already selected, deselect it
                        if (doubleUpBtn.classList.contains('selected')) {
                            doubleUpBtn.classList.remove('selected');
                            doubleUpPick = null;
                        } else {
                            // Deselect all other double up buttons
                            document.querySelectorAll('.double-up-btn').forEach(btn => btn.classList.remove('selected'));
                            // Select this one
                            doubleUpBtn.classList.add('selected');
                            doubleUpPick = gameId;
                        }
                        console.log('Double Up Pick:', doubleUpPick);
                    });
                });
            }

            // --- Initial Application Load ---
            function init() {
                showPage('home-page');
                populatePickHistory();
                renderGames();
            }

            init();
        });
    </script>

</body>
</html>
